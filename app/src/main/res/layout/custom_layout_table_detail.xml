<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/defualt_margin"
                android:paddingRight="@dimen/defualt_margin"
                android:paddingTop="@dimen/defualt_margin"
                android:paddingBottom="@dimen/defualt_margin"
    >

    <ImageView
        android:id="@+id/custom_layout_table_detail__imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        app:srcCompat="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/custom_layout_table_detail__name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/custom_layout_table_detail__imageView"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/custom_layout_table_detail__imageView"
        android:text="TextView"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:background="#FABADA"
        />

    <TextView
        android:id="@+id/custom_layout_table_detail__note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/custom_layout_table_detail__imageView"
        android:text="TextView"
        android:textSize="15sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/custom_layout_table_detail__name"
        android:layout_alignStart="@+id/custom_layout_table_detail__name"

        tools:text="Note"
        tools:background="#FABADA"
        />

    <TextView
        android:id="@+id/custom_layout_table_detail__price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textAlignment="textEnd"
        android:layout_gravity="end"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/recyler_view_menu_row__image"
        android:layout_alignLeft="@+id/recyler_view_menu_row__name"

        tools:text="18"
        tools:background="#FABADA"
        />

</RelativeLayout>