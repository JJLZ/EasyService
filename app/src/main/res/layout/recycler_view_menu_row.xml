<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp"
    android:transitionName="transitionToDetail"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="16dp"
        android:paddingStart="8dp">

        <ImageView
            android:id="@+id/recyler_view_menu_row__image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"

            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"

            android:adjustViewBounds="true"
            android:contentDescription="Imagen del platillo o bebida"

            tools:src="@drawable/food_placeholder"
            />

        <TextView
            android:id="@+id/recyler_view_menu_row__name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/recyler_view_menu_row__image"
            android:layout_toRightOf="@+id/recyler_view_menu_row__image"

            android:paddingStart="8dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:paddingLeft="8dp"

            tools:text="Enchiladas suizas"
            tools:background="#FABADA"
            />

        <TextView
            android:id="@+id/recyler_view_menu_row__price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textAlignment="textEnd"
            android:layout_gravity="end"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/recyler_view_menu_row__image"
            android:layout_alignLeft="@+id/recyler_view_menu_row__name"

            tools:text="18"
            tools:background="#FABADA"
            />

        <TextView
            android:id="@+id/ecyler_view_menu_row__allergens"
            android:layout_width="80dp"
            android:layout_height="30dp"

            android:layout_alignBottom="@+id/recyler_view_menu_row__image"
            android:layout_alignLeft="@+id/recyler_view_menu_row__name"
            android:layout_alignRight="@+id/recyler_view_menu_row__name"

            android:textSize="18sp"
            android:textAlignment="center"
            android:background="#FF7776"

            tools:background="#FF7776"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>